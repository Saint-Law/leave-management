@model IEnumerable<leave_management.Models.LeaveTypeVM>

@{ ViewData["Title"] = "List Employees"; }

<h1>List Employees</h1>


<table id="tblData" class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DefaultDays)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.DefaultDays)
    </td>
    <td>
        <a asp-action="Edit" class="btn btn-warning btn-sm" asp-route-id="@item.Id">
            <i class="fa fa-pencil"></i> Edit
        </a>
        <a asp-action="Details" class="btn btn-info btn-sm" asp-route-id="@item.Id">
            <i class="fa fa-info-circle"></i> Datails
        </a>
        <a asp-action="Delete" class="btn btn-danger btn-sm" asp-route-id="@item.Id" onclick="return confirm('Are you sure you want to delete this record?')">
            <i class="fa fa-trash"></i> Delete
        </a>
    </td>
</tr>
}
    </tbody>
</table>
@section Scripts{
    <script></script>
}

